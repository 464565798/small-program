.top_search{
  width: 750rpx;
}
.input_search_view{
  margin: 0 auto;
  width: 650rpx;
  height: 60rpx;
  padding-left: 10px;
  border: 1px solid lightgrey;
  border-radius: 7px;
  font-size: 15px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  justify-content:center; 
  align-items:center;
