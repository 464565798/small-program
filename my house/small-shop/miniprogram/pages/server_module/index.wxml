<!-- 综合服务区 -->
<!-- //左服务区 -->
<template name='left_server'>
  <view class='left_server'>
  <view wx:if='{{server_goods.length>0}}' class='left_server_main'>
    <image src='{{server_goods[0].image}}' mode='scaleToFill'>
      
    </image>
    <view class='small_tip'>{{server_goods[0].name}}</view>
  </view>
  <view wx:if='{{server_goods.length>1}}' class='left_server_top'>
    <image  src='{{server_goods[1].image}}' mode='scaleToFill'>
      
    </image>
    <view class='small_tip'>{{server_goods[1].name}}</view>
  
  </view>
  <view wx:if='{{server_goods.length>2}}' class='left_server_bottom'>
    <image  src='{{server_goods[2].image}}' mode='scaleToFill'>
      
    </image>
    <view class='small_tip'>{{server_goods[2].name}}</view>
  </view>
  <view style='height:0px;clear:both;'></view>
</view>
</template>
