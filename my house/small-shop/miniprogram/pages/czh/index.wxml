<!-- 分类区 -->

<view class='top_search'>
  <view class='input_search_view'>
    <image src='../../resouce/search.png'></image>
    <input type='text' placeholder='请输入搜索商品的名称' disabled='{{true}}' bindtap='goSearch'></input>
  </view>
</view>
<view class='sepa_lab'></view>
<view class='left_categrogy'>
  <scroll-view>
    <block wx:for='{{cateragy}}' wx:key='{{item.cate_id}}'>
    <view wx:if='{{current_id==item.cate_id}}' class='cate_view_select' id='{{index}}' bindtap='tapCateragy' data-index-key='{{item.cate_id}}'>
    <text>{{item.cate_name}}</text>
      
    </view>
    <view wx:else class='cate_view' id='{{index}}' bindtap='tapCateragy' data-index-key='{{item.cate_id}}'>
    <text>{{item.cate_name}}</text>
    </view>
    </block>
    <view style='clear:both;'></view>
  </scroll-view>
</view>
<view class='right_descgoods'>
  <scroll-view>
    <block wx:for='{{cate_goods}}' wx:key='{{item.cate_goods_id}}'>
    <view wx:if='{{item.image}}' class='cate_good_view' bindtap='tapDescCategoods' data-categoodsid='{{item.cate_goods_id}}'>
      <image src='{{item.image}}' mode='scaleToFill'></image>
      <text>{{item.name}}</text>
    </view>
    <view wx:else class='cate_good_text_view' bindtap='tapDescCategoods' data-categoodsid='{{item.cate_goods_id}}'>
      <text>{{item.name}}</text>
    </view>
    </block>
  </scroll-view>
</view>