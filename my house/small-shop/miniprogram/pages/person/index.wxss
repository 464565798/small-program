page{
  width: 100%;
  position: relative;
}
.bg{
  position: absolute;
  top: 0px;
  width: 100%;
  height: 350rpx;
}
.topView{
  width: 100%;
  height: 300rpx;
  padding-top: 50rpx;
  /* background: #0E8FE8; */
  background: url('../../resouce/person_bg.jpeg') no-repeat;
  position: relative;
}
.avatar{
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin: 0 auto;
}
.nameTitle{
  margin-top: 10rpx;
  text-align: center;
  font-size: 13px;
}
.tipView{
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.2);
}
.tipView view{
  float: left;
  /* height: 100rpx; */
  width:250rpx;
  padding-top: 20rpx;
  /* align-content: center;
  justify-content: center;
  align-items: center; */
  
}
.tipView view image{
  margin: 0 auto;
  width: 35rpx;
  height: 35rpx;
  margin-bottom: 10rpx;
  display: block;
}

.tipView view text{

  font-size: 12px;
 
  display: block;
  text-align: center;
}